<div class="container-fluid vh-100 d-flex align-items-center justify-content-center p-0">
  <div class="row w-100 h-100 m-0">
    <%= render "devise/shared/image_sidebar" %>

    <div class="col-md-6 h-100 d-flex align-items-center justify-content-center">
      <div class="card w-75">
        <div class="card-header">
          <h4>¿Olvidaste tu contraseña?</h4>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, data: { turbo: false }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Ingresa tu email" %>
            </div>

            <div class="form-group mt-3 text-center">
              <%= f.submit "Enviar instrucciones de reseteo de contraseña", class: "btn btn-primary btn-block" %>
            </div>
          <% end %>

          <div class="text-center mt-3">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
