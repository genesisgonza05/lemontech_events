<div class="d-flex justify-content-between align-items-center box-title-buttons">
  <div class="flex-grow-1">
    <h1 class="mb-0 font-weight-bold">Mi Perfil</h1>
  </div>
  <div>
    <%= link_to root_path, class: "btn btn-secondary btn-icon btn-action-custome", data: { turbo: false } do %>
      <i class="fa fa-arrow-left mr-2"></i> Volver
    <% end %>
  </div>
</div>

<div class="form-box">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <% if resource.errors.any? %>
      <div class="alert alert-danger">
        <h2><%= pluralize(resource.errors.count, "error") %> prohibieron que este perfil se guardara:</h2>
        <ul>
          <% resource.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row mt-3">
      <div class="col-md-4">
        <div class="form-group">
          <%= f.label :email, class: "d-block font-weight-bold mb-2" %>
          <%= f.email_field :email, class: "form-control", placeholder: "Ingresa tu email", autofocus: true, autocomplete: "email" %>
        </div>
      </div>

      <div class="col-md-4">
        <div class="form-group">
          <%= f.label :password, class: "d-block font-weight-bold mb-2" %>
          <%= f.password_field :password, class: "form-control", autocomplete: "new-password", placeholder: "Nuevo password" %>
          <i><strong>(i)</strong></i>
          <% if @minimum_password_length %>
            <em> (<%= @minimum_password_length %> caracteres m√≠nimo)</em>
          <% end %>
          <i>(Deja en blanco si no deseas cambiarlo)</i>
        </div>
      </div>

      <div class="col-md-4">
        <div class="form-group">
          <%= f.label :password_confirmation, class: "d-block font-weight-bold mb-2" %>
          <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password", placeholder: "Confirma tu nuevo password" %>
        </div>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-md-4">
        <div class="form-group">
          <%= f.label :current_password, class: "d-block font-weight-bold mb-2" do %>
            Password actual <span style="color: red;">*</span>
          <% end %>
          <%= f.password_field :current_password, class: "form-control", autocomplete: "current-password", placeholder: "Password actual" %>
          <i><strong>(i)</strong> (Necesitamos tu password actual para confirmar los cambios)</i>
        </div>
      </div>

      <div class="col-md-9"></div>
    </div>

    <div class="row mt-3">
      <div class="col-md-9"></div>
      <div class="col-md-3">
        <div class="form-group mt-3">
          <%= f.submit "Actualizar", class: "btn btn-primary btn-block btn-action-custome" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
